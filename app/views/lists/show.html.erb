<%= render "nav" %>

<div class="container">
  <div class="row">
    <h1 class="mt-3"><%= @list.name %></h1>
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-6">
    <div class="card-trip mt-3">
    <%= image_tag bookmark.movie.poster_url, alt: "#{bookmark.movie.title} Picture" %>
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <%# how do we get the movie_id param %>
      <%= link_to 'Destroy', bookmark_path(params:{bookmark_id:bookmark}),
       data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
</div>
    <% end %>

  </div>
</div>
