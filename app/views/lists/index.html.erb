<%= render "nav" %>

<div class="container">
  <div class="row">
    <h1 class="mt-3">Lists</h1>
    <% @lists.each do |list| %>
    <div class="col-12">
      <%= link_to list.name, list_path(list) %>
      <% if list.photo.attached? %>
        <%= cl_image_tag list.photo.key, width: 400, height: 300, crop: :fill %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
